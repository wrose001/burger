<img class="mx-auto d-block p-4" width="200"
  src="https://lh5.googleusercontent.com/proxy/LxExxkEfMp8I0r7q6kvQTgqaClHmAfupoVFIEobaP4rbZaGs3Cqm3v7Ml-E7Q9G64H0WWYgHH5idFKuEB60BDgaOMHziaQ"
  alt="burgerImage">

<h2 class="text-center">Eat-da-Burger</h2>
<div class="mx-auto text-center pb-4">
  <form class="justify-content-center create-form">

    <div class="form-group">
      <label for="ca"></label>
      <input type="text" id="ca" name="name" placeholder="Burger Name">
    </div>

    <div class="form-group">
      <label for="devour"></label>
      <input type="radio" name="devour" value="1" checked> Devour! &#160;&#160;
      <input type="radio" name="devour" value="0"> Not Devoured!
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>
<div class="container">
<div class="row">
  <div class="col-6 p-2">
    <h3 class="text-center">Burgers that are not devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#unless devour}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6 p-2">
    <h3 class="text-center">Burgers that are devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
</div>
